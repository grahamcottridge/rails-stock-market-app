<div class="container">

<h1>Stocks</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Ticker</th>
      <th>Current Price</th>
      <th>Market Cap</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
    <% if stock.user_id == current_user.id && %>
    <% begin %>
        <% @stock_quote = StockQuote::Stock.quote(stock.ticker) %>
      <% rescue StandardError %>
        <% next %>
      <% end %>
      <tr>
        <td><%= stock.ticker %></td>
        <td><%= @stock_quote.latest_price %></td>
        <td><%= @stock_quote.market_cap %></td>
        <td><%= link_to 'Show', stock, class: "class=btn btn-primary btn-xs" %></td>
        <td><%= link_to 'Edit', edit_stock_path(stock), class: "class=btn btn-success btn-xs"%></td>
        <td><%= link_to 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' }, class: "class=btn btn-danger btn-xs" %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Stock', new_stock_path, class: "btn btn-warning" %>

</div>
