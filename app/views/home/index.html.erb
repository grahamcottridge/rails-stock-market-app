<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <h1 class="text-center">Stock Market Price Watch</h1>
      <hr/>

      <div class="form-group">
        <%= form_tag root_path, :method => 'POST' do %>
        <%= text_field_tag 'id', nil, placeholder: "Enter Company Ticker Symbol", size: 20, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= submit_tag 'Current Stock Information', class: 'btn btn-primary btn-block' %>
      </div>
      <% end %>
      <hr/>

      <% if @stock %>
      <strong>Company Name: </strong><%= @stock.company_name %> - <%= @stock.symbol %><br/>
      <strong>Latest Price: </strong><%= @stock.latest_price %><br/>
      <strong>Price/Earning Ratio: </strong><%= @stock.pe_ratio %><br/>
      <strong>Market Cap: </strong><%= @stock.market_cap %><br/>
      <strong>Previous Close: </strong><%= @stock.previous_close %><br/>
      <strong>Stock Open: </strong><%= @stock.open %><br/>
      <strong>Year High: </strong><%= @stock.week52_high %><br/>
      <strong>Year Low: </strong><%= @stock.week52_low %><br/>
      <% elsif @noentry %>
      <%= @noentry %>
      <% end %>
    </div>
  </div>
</div>

